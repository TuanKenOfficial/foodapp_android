<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="2dp"
    android:elevation="2dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/maHoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:textSize="18sp"
            android:text="Hóa đơn #123123123125"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tenKhachDat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khách đặt"
            android:textSize="15sp"
            android:paddingHorizontal="10dp"/>
        <TextView
            android:id="@+id/sdtKhach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SĐT: 0123456789"
            android:paddingHorizontal="10dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/diaChiKhach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:paddingHorizontal="10dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tenQuanAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Quán"
            android:paddingHorizontal="10dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/ngayDat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đặt"
            android:paddingHorizontal="10dp"
            android:textColor="#4CAF50"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tongHoaDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4CAF50"
            android:text="Tổng hóa đơn: 100000đ"
            android:paddingHorizontal="10dp"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>