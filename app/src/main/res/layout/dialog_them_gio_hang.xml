<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:id="@+id/hinhAnh"
        android:src="@drawable/img_test"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <TextView
        android:id="@+id/tenSp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hinhAnh"
        android:text="Tên sản phẩm"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:padding="12dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tiLe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hinhAnh"
        android:layout_toEndOf="@id/tenSp"
        android:background="@drawable/shape_rect05"
        android:padding="10dp"
        android:text="Giảm 10%"
        android:textColor="@color/white"/>
    <TextView
        android:paddingHorizontal="10dp"
        android:id="@+id/giaGoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá gốc"
        android:layout_below="@id/tenSp"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/giaGiam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá giảm"
        android:layout_toEndOf="@id/giaGoc"
        android:layout_below="@id/tenSp"
        android:textColor="#E91E1E"
        android:textSize="22sp"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:layout_below="@id/giaGoc">
        <ImageButton
            android:id="@+id/giamSoLuong"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/round_remove_30"
            android:backgroundTint="#E91E1E"
            android:background="@drawable/button_theme_02"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/soLuong"
            android:paddingHorizontal="12dp"
            android:textSize="20sp"/>
        <ImageButton
            android:id="@+id/tangSoLuong"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#009688"
            android:src="@drawable/round_add_24"
            android:background="@drawable/button_theme_02"/>
    </LinearLayout>
    <TextView
        android:textColor="@color/red"
        android:layout_below="@id/giaGoc"
        android:id="@+id/abc"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng:"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:textColor="@color/red"
        android:layout_below="@id/giaGoc"
        android:id="@+id/tong"
        android:layout_toEndOf="@id/abc"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000đ"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:paddingVertical="10dp"/>
    <Button
        android:id="@+id/themVaoGio"
        android:layout_below="@id/tong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm vào giỏ"
        android:paddingVertical="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#E91E1E"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"/>

</RelativeLayout>